<!DOCTYPE html>
<html>
		<!-- Favicon -->
		<link href="assets/images/brand/favicon.png" rel="icon" type="image/png">
		<!-- Icons -->
		<script src="https://kit.fontawesome.com/b5db9ccac9.js" crossorigin="anonymous"></script>
		<!-- jquery -->
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<!-- Bootstrap -->
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

		<title>SatisFaction</title>

		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag  'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>

<!-- NAVBAR -->
		<% if content_for?(:navbar) %>
		    <%= yield(:navbar) %>
		<% else %>
			<header class="header-global">
			    <nav id="navbar-main" class="navbar navbar-expand-lg navbar-dark bg-default">
			      <div class="container">
			        <%= link_to "Satis'faction", root_path, class:'navbar-brand' %>
			        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar_global" aria-controls="navbar_global" aria-expanded="false" aria-label="Toggle navigation">
			          <span class="navbar-toggler-icon"></span>
			        </button>
			        <div class="navbar-collapse collapse" id="navbar_global">
			          <div class="navbar-collapse-header">
			            <div class="row">
			              <div class="col-6 collapse-brand">
			                <a href="./index.html">
			                  <img src="./assets/img/brand/blue.png">
			                </a>
			              </div>
			              <div class="col-6 collapse-close">
			                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar_global" aria-controls="navbar_global" aria-expanded="false" aria-label="Toggle navigation">
			                  <span></span>
			                  <span></span>
			                </button>
			              </div>
			            </div>
			          </div>
			          <ul class="navbar-nav navbar-nav-hover align-items-lg-center">
			            <li class="nav-item">
			              <%= link_to "The solution","/#the_solution", class:'nav-link' %>
			            </li>
			            <li class="nav-item">
			              <%= link_to "About us","/#the_team", class:'nav-link' %>
			            </li>
			            <li class="nav-item">
			              <%= link_to "Contact us", new_contact_path, class: 'nav-link' %>
			            </li>
			          </ul>
			          <ul class="navbar-nav align-items-lg-center ml-lg-auto">
			            <li class="nav-item d-none d-lg-block ml-lg-4">
			              <%= link_to '<i class="fa fa-pen mr-2"></i>  Create a survey'.html_safe, new_survey_path, class:'btn btn-neutral btn-icon' %>
			            </li>
			            <li class="nav-item dropdown">
			              <a class="nav-link nav-link-icon" href="#" id="navbar-default_dropdown_1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			                <i class="fas fa-2x fa-user-circle" style="size: 50px;"></i>
			                <span class="nav-link-inner--text d-lg-none">Profile</span>
			              </a>
			              
			              <% if user_signed_in? %>
			              	<% @dashboard = Dashboard.where(user_id: current_user) %>
			                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbar-default_dropdown_1">
			                	
			                  <%= link_to "My surveys", surveys_path, class: "dropdown-item" %>

												<% if current_user.surveys.exists? %>
												<%= link_to 'Dashboard', dashboard_path(@dashboard.ids), class: "dropdown-item" %>
												<% end %>
												<%= link_to 'Edit profil', edit_user_registration_path, class: "dropdown-item" %>
			                  <%= link_to "Disconnect", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
			                </div>
			              <% else %>
			                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbar-default_dropdown_1">
			                  <%= link_to "Sign in", new_user_session_path, class: "dropdown-item" %>
			                  <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
			                </div>
			              <% end %>
			            </li>
			          </ul>
			        </div>
			      </div>
			    </nav>
			  </header>
		<% end %>
<!-- End of Navbar -->


<%= yield %>


<!-- Footer --> 
		<footer>
			<div class="row align-items-center justify-content-md-between">
				<div class="col-md-6">
					<div class="copyright">
						<%= link_to "© 2019 Satisfact°, final project", root_path, class: "nav-link" %>
					</div>
				</div>
					<div class="col-md-6">
						<ul class="nav nav-footer justify-content-end">
							<li class="nav-item">
								<%= link_to "About Us", "/#the_team" , class: "nav-link" %>
							</li>
							<li class="nav-item">
								<%= link_to "Our services", "/#the_solution" , class: "nav-link" %>
							</li>
							<li class="nav-item">
								<%= link_to "Contact_us", new_contact_path, class: "nav-link" %>
							</li>
						</ul>
					</div>
			</div>
		</footer>

<!-- End of footer --> 

	</body>
</html>