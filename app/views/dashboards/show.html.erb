<% @user.surveys.each do |user_s| %>
	<strong>Survey : </strong><%= user_s.title %><br>
  <% average = [] %>
  <% user_s.questions.each do |q| %>
    <strong>Question :</strong><%= q.content %><br>
    <strong>- Answers :</strong><% q.answers.each do |qa| %>
                  <%= qa.value%> / 
                  <% average << qa.value %>
                <% end %><br>
  <% end %>
  <% result = average.sum / average.size.to_f %>
  <strong>The average for this survey is </strong><%= result %> /4 <br><br>
<% end %>
